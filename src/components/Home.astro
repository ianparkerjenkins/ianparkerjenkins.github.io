---
import lon from '../assets/spin-qubits-screenshot.png';
import ink1 from '../assets/ink-drawing-001.jpg';
import goofin from '../assets/goofing-in-taiwan-01.gif';
import skysealand from '../assets/skysealand-screenshot.png';
---

<div>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poiret+One&display=swap" rel="stylesheet">
    <div>


        <div class="grid">
            <div class="card intro">
                <h1>Hi! Iâ€™m Ian. ðŸ‘‹</h1>
                <h1>I like building things and creative problem solving.</h1>
                <h1>In my free time, I enjoy drawing, traveling, hiking, making coffee, and tinkering with side projects.</h1>
            </div>
            <div class="card wide">
                <a href="https://spin-qubits.vercel.app/"><img class="card-image" src={lon.src} alt="Project 1" /></a>
                <div class="card-text">
                    <p>Project: Learn About Spin Qubits</p>
                </div>
            </div>
            <div class="card">
                <img class="card-image" src={ink1.src} alt="ink1" />
                <div class="card-text">
                    <p>Ink Drawing</p>
                </div>
            </div>
            <div class="card">
                <img class="card-image" src={goofin.src} alt="goofin" />
                <div class="card-text">
                    <p>Goofing around in Taiwan</p>
                </div>
            </div>
            <div class="card">
                <a href="https://github.com/ianparkerjenkins/skysealand-detector"><img class="card-image" src={skysealand.src} alt="Project 2" /></a>
                <div class="card-text">
                    <p>Project: Sky-Sea-Land ML Object Detection</p>
                </div>
            </div>
            <!-- <div class="card">Item 7</div>
            <div class="card">Item 8</div> -->

        </div>

    </div>
</div>

<style>
    
    h1 {
        font-family: "Poiret One", sans-serif;
        font-weight: 400;
        font-style: normal;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 1.2rem;
        padding: 2rem;
    }

    .card.tall {
        grid-row: span 2;
        aspect-ratio: auto; 
    }

    .card.wide {
        grid-column: span 2;
        aspect-ratio: auto;
    }

    .card.intro {
        background: #ffffff;
        grid-column: span 2;
        aspect-ratio: auto;
    }

    /* .card.big {
        background: #ffffff;
        grid-column: span 2;
        grid-row: span 2;
        aspect-ratio: auto;
    } */

    @media (max-width: 640px) {
        .card.tall,
        .card.wide,
        .card.big {
            grid-column: span 1;
            grid-row: span 1;
            aspect-ratio: 1 / 1;
        }
    }

    .card {
        background: #ededed;
        position: relative;       
        overflow: hidden;         
        border-radius: 12px;
        cursor: pointer;
        font-size: 1.25rem;
        aspect-ratio: 1 / 1;      
    }

    .card img {
        width: 100%;
        height: 100%;
        object-fit: cover;       
        display: block;
        transition: transform 0.3s ease;
    }

    .card:hover img {
        transform: scale(1.05);
    }

    .card-text {
        position: absolute;
        bottom: 0;              
        left: 0;
        right: 0;
        padding: 1rem;
        color: rgb(255, 255, 255);
        background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
        opacity: 0.2;
        transition: opacity 0.3s ease;
    }

    .card:hover .card-text {
        opacity: 1;
    }

</style>